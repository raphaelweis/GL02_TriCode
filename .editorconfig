# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
indent_style = space
insert_final_newline = true

# 2 space indentation for JavaScript files
[*.js, *.cjs, *.mjs]
indent_style = space
indent_size = 2
